{% extends 'base.html.twig' %}

{% block title %} Posts {% endblock %}

{% block body %}
    <h2>Posts</h2>

    {% for post in posts %}
        <h4>
            <a href="#">{{ post.title }}</a>
        </h4>

        {% if post.content %}
            <article>{{ post.content }}</article>
        {% endif %}
    {% endfor %}
{% endblock %}
